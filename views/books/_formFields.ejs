<!-- Book Form Fields-->
<div class="form-row">
  <div class="form-item">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="<%= book.title %>" autocomplete="off" required />
  </div>
  <div class="form-item">
    <label for="author">Author:</label>
    <select name="authorId" id="author" required>
      <% authors.forEach(author => { %>
        <option label="<%= author.name %>" value="<%= author.id %>"
        <% if (author.id == book.authorId)  { %> selected<% } %>
        ></option>
      <% }); %>
    </select>
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label for="publishedDate">Published Date:</label>
    <input type="date" name="publishedDate" id="publishedDate" value="<%= book.publishedDate == null ? "" : book.publishedDate.toISOString().split("T")[0] %>" required />
  </div>
  <div class="form-item">
    <label for="pageCount">Page Count:</label>
    <input type="number" name="pageCount" id="pageCount" min="1" value="<%= book.pageCount %>" />
  </div>
</div>

<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label for="image">Image:</label>
    <input class="book-image filepond" type="file" name="image" id="image" />
  </div>
  <div class="form-item">
    <label for="description">Description:</label>
    <textarea name="description" id="description"><%= book.description %></textarea>  
  </div>
</div>
