<!-- Main Authors - Show all Page-->
<!-- Search Author Form -->
<h2 class="page-header">Search Authors</h2>
<form action="/authors" method="GET">
  <div>
    <label for="nameSearch">Name: </label>
    <input type="text" name="name" id="nameSearch" value="<%= searchOptions.name %>" />
  </div>
  <div>
    <button type="submit">Search</button>
  </div>
</form>
<br />
<!-- Display Authors -->
<div>
  <% authors.forEach(author => { %>
    <div><%= author.name %></div>
    <div class="btn-row">
      <a class="btn btn-primary" href="/authors/<%= author.id %>">View</a>
      <a class="btn btn-primary" href="/authors/<%= author.id %>/edit">Edit</a>
      <%- include("../layouts/deleteForm.ejs", {
        url: `/authors/${author.id}` }) %>
    </div>
  <% }); %>
</div>
